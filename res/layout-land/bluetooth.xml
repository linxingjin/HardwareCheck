<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/item_background_land" >
    
     <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="4"
            android:layout_marginLeft="40dip"
            android:background="#00000000"
            android:orientation="vertical" >
     
		    <ImageView 
		        android:id="@id/image_bluetooth"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/bluetooth"
		    />
		    
		    <TextView
		         android:id="@id/text_bluetooth_hint"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:layout_marginTop="20dip"
		         android:textSize="15dip"
		         android:text="蓝牙未开启"
		         android:textColor="#ffffff" 
		    />
	    
	   		<Button
		        android:id="@id/btn_bluetooth_switch"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="20dip"
	        />
	   		
     </LinearLayout>
     
     <ScrollView
        android:id="@id/main_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_marginTop="30dip" 
  		android:layout_marginBottom="30dip"
  		android:layout_marginRight="30dip"
  		android:layout_marginLeft="60dip"
        android:orientation="vertical" >
     <LinearLayout
          android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:layout_gravity="center"
	      android:orientation="vertical"
	      android:layout_marginTop="20dip"
	      android:layout_marginLeft="20dip"
	      android:layout_marginRight="20dip">
	      
          <TextView
		         android:id="@id/text_bluetooth_info"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:layout_gravity="center"
		         android:text="蓝牙未开启，请确保先开启蓝牙"
		         android:textSize="15dip"
		         android:textColor="#ffffff" 
		    />
	       
	   	   <LinearLayout
		       android:layout_width="fill_parent"
		       android:layout_height="wrap_content"
		       android:orientation="horizontal" >
	
		       <TextView
		           android:id="@id/text_bluetooth_chinese_name"
		           android:layout_width="fill_parent"
		           android:layout_height="wrap_content"
		           android:layout_weight="2"
		           android:gravity="right"
		           android:layout_marginRight="20dip"
		           android:textColor="#ffffff" 
		        />
		
		        <TextView
		            android:id="@id/text_bluetooth_name"  
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:gravity="left"
		            android:layout_marginLeft="20dip"
		            android:textColor="#3dbef9" 
				/>     
	   	 </LinearLayout>
	   	 
 	   	 <LinearLayout
		       android:layout_width="fill_parent"
		       android:layout_height="wrap_content"
		       android:orientation="horizontal" >
	
		       <TextView
		           android:id="@id/text_bluetooth_chinese_mac"
		           android:layout_width="fill_parent"
		           android:layout_height="wrap_content"
		           android:layout_weight="2"
		           android:gravity="right"
		           android:layout_marginRight="20dip"
		           android:textColor="#ffffff" 
		        />
		
		        <TextView
		            android:id="@id/text_bluetooth_mac"  
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:gravity="left"
		            android:layout_marginLeft="20dip"
		            android:textColor="#3dbef9" 
				/>     
	   	 </LinearLayout>
	   	 
		 <LinearLayout
		       android:layout_width="fill_parent"
		       android:layout_height="wrap_content"
		       android:orientation="horizontal" >
	
		       <TextView
		           android:id="@id/text_bluetooth_chinese_search_mode"
		           android:layout_width="fill_parent"
		           android:layout_height="wrap_content"
		           android:layout_weight="2"
		           android:gravity="right"
		           android:layout_marginRight="20dip"
		           android:textColor="#ffffff" 
		        />
		
		        <TextView
		            android:id="@id/text_bluetooth_search_mode"  
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:gravity="left"
		            android:layout_marginLeft="20dip"
		            android:textColor="#3dbef9" 
				/>     
	   	 </LinearLayout>
     </LinearLayout>
	</ScrollView>
</LinearLayout>