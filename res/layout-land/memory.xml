<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:background="@drawable/item_background_land" >

    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:layout_gravity="center"
         android:gravity="center"
         android:layout_weight="4"
         android:layout_marginLeft="40dip"
         android:background="#00000000"
         android:orientation="vertical" >

	    <ImageView
	        android:id="@id/image_memory"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:background="@drawable/memory"      
	    />
	 </LinearLayout>
       <ScrollView
           android:id="@id/main_scrollview"
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:layout_weight="1"
           android:layout_marginTop="30dip" 
	       android:layout_marginBottom="30dip"
	       android:layout_marginRight="30dip"
	       android:layout_marginLeft="60dip"
           android:orientation="vertical" >
              
           <LinearLayout
	           android:layout_width="fill_parent"
		       android:layout_height="wrap_content"
		       android:layout_gravity="center"
		       android:orientation="vertical" >
		       
		   	   <LinearLayout
			       android:layout_width="fill_parent"
			       android:layout_height="wrap_content"
			       android:orientation="horizontal" >
		
			       <TextView
			           android:layout_width="fill_parent"
			           android:layout_height="wrap_content"
			           android:layout_weight="1"
			           android:gravity="right"
			           android:layout_marginRight="20dip"
			           android:text="运行内存总大小: "
			           android:textColor="#ffffff" 
			        />
			
			        <TextView
			            android:id="@id/text_memory_total"  
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_weight="1"
			            android:gravity="left"
			            android:layout_marginLeft="20dip"
			            android:textColor="#3dbef9" 
					/>     
	    	   </LinearLayout>
	    	   
		   	   <LinearLayout
			       android:layout_width="fill_parent"
			       android:layout_height="wrap_content"
			       android:orientation="horizontal" >
		
			       <TextView
			           android:layout_width="fill_parent"
			           android:layout_height="wrap_content"
			           android:layout_weight="1"
			           android:gravity="right"
			           android:layout_marginRight="20dip"
			           android:text="可用内存大小: "
			           android:textColor="#ffffff" 
			        />
			
			        <TextView
			            android:id="@id/text_memory_available"  
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_weight="1"
			            android:gravity="left"
			            android:layout_marginLeft="20dip"
			            android:textColor="#3dbef9" 
					/>     
	    	   </LinearLayout>
	    	   
		   	   <LinearLayout
			       android:layout_width="fill_parent"
			       android:layout_height="wrap_content"
			       android:orientation="horizontal" >
		
			       <TextView
			           android:layout_width="fill_parent"
			           android:layout_height="wrap_content"
			           android:layout_weight="1"
			           android:gravity="right"
			           android:layout_marginRight="20dip"
			           android:text="内存已使用: "
			           android:textColor="#ffffff" 
			        />
			
			        <TextView
			            android:id="@id/text_memory_used"  
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_weight="1"
			            android:gravity="left"
			            android:layout_marginLeft="20dip"
			            android:textColor="#3dbef9" 
					/>     
	    	   </LinearLayout>
	    	   
		   	   <LinearLayout
			       android:layout_width="fill_parent"
			       android:layout_height="wrap_content"
			       android:orientation="horizontal" >
		
			       <TextView
			           android:layout_width="fill_parent"
			           android:layout_height="wrap_content"
			           android:layout_weight="1"
			           android:gravity="right"
			           android:layout_marginRight="20dip"
			           android:text="SDCard总大小: "
			           android:textColor="#ffffff" 
			        />
			
			        <TextView
			            android:id="@id/text_sdcard_total"  
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_weight="1"
			            android:gravity="left"
			            android:layout_marginLeft="20dip"
			            android:textColor="#3dbef9" 
					/>     
	    	   </LinearLayout>
	    	   
		   	   <LinearLayout
			       android:layout_width="fill_parent"
			       android:layout_height="wrap_content"
			       android:orientation="horizontal" >
		
			       <TextView
			           android:layout_width="fill_parent"
			           android:layout_height="wrap_content"
			           android:layout_weight="1"
			           android:gravity="right"
			           android:layout_marginRight="20dip"
			           android:text="SDCard剩余大小: "
			           android:textColor="#ffffff" 
			        />
			
			        <TextView
			            android:id="@id/text_sdcard_available"  
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_weight="1"
			            android:gravity="left"
			            android:layout_marginLeft="20dip"
			            android:textColor="#3dbef9" 
					/>     
	    	   </LinearLayout>
	    	   
		   	   <LinearLayout
			       android:layout_width="fill_parent"
			       android:layout_height="wrap_content"
			       android:orientation="horizontal" >
		
			       <TextView
			           android:layout_width="fill_parent"
			           android:layout_height="wrap_content"
			           android:layout_weight="1"
			           android:gravity="right"
			           android:layout_marginRight="20dip"
			           android:text="SDCard已使用: "
			           android:textColor="#ffffff" 
			        />
			
			        <TextView
			            android:id="@id/text_sdcard_used"  
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_weight="1"
			            android:gravity="left"
			            android:layout_marginLeft="20dip"
			            android:textColor="#3dbef9" 
					/>     
	    	   </LinearLayout>
    	   </LinearLayout>
	 </ScrollView>
 </LinearLayout>