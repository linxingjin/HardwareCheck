<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/item_background_land" >
    
     <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="4"
            android:layout_marginLeft="40dip"
            android:background="#00000000"
            android:orientation="vertical" >

		    <ImageView 
		        android:id="@id/image_wifi"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/wifi"
		    />
	    
		    <TextView
		         android:id="@id/text_wifi_hint"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:layout_marginTop="20dip"
		         android:textSize="15dip"
		         android:text="Wifi未开启"
		         android:textColor="#ffffff"
		    />
	    
		    <Button
		        android:id="@id/btn_wifi_switch"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="20dip"
			/>	    
	  </LinearLayout>
	  
     <LinearLayout
	  	    android:layout_width="fill_parent"
	  	    android:layout_height="fill_parent"
	  	    android:layout_weight="1"
	  	    android:layout_gravity="center"
	  	    android:layout_marginTop="30dip" 
	  		android:layout_marginBottom="30dip"
	  		android:layout_marginRight="30dip"
	  		android:layout_marginLeft="60dip"
	  	    android:orientation="vertical" >
		    
         	<TextView
		         android:id="@id/text_wifi_info"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:paddingLeft="20dip"
		         android:textColor="#ffffff"
	    	 />
     
	  		<ScrollView
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"   
		        android:paddingLeft="20dip"
		        android:orientation="vertical" >
			  	<RelativeLayout 
			  	    android:layout_width="fill_parent"
			  	    android:layout_height="match_parent" >
				    <TextView
				         android:id="@id/text_scan_result"
				         android:layout_width="wrap_content"
				         android:layout_height="wrap_content"
				         android:layout_alignParentLeft="true"
				         android:layout_marginTop="15dip"
				         android:layout_below="@id/text_wifi_info"
				         android:textColor="#ffffff"
					 />
			    </RelativeLayout>
	  	</ScrollView>
	</LinearLayout>
</LinearLayout>
