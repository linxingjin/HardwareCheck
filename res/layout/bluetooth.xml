<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_background" >
    
     <RelativeLayout
         android:id="@id/layout_bluetooth"
         android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:orientation="vertical" >
	    <ImageView 
	        android:id="@id/image_bluetooth"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="60dip"
            android:layout_marginBottom="50dip"
	        android:background="@drawable/bluetooth"
	        android:layout_centerHorizontal="true"
	    />
	    
	    <TextView
	         android:id="@id/text_bluetooth"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_below="@id/image_bluetooth"
	         android:layout_marginLeft="30dip"
	         android:textSize="25dip"
	         android:text="蓝牙"
	         android:textColor="#ffffff" 
		/>
	    
	    <TextView
	         android:id="@id/text_bluetooth_hint"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_alignParentLeft="true"
	         android:layout_below="@id/text_bluetooth"
	         android:layout_marginLeft="30dip"
	         android:textSize="15dip"
	         android:text="蓝牙未开启"
	         android:textColor="#ffffff" 
	    />
    
   		<Button
	        android:id="@id/btn_bluetooth_switch"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_below="@id/image_bluetooth"
	        android:layout_marginTop="15dip"
	        android:layout_marginRight="30dip" 
        />
   		
   		<TextView
	         android:id="@id/text_bluetooth_info"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_alignParentLeft="true"
	         android:layout_below="@id/text_bluetooth_hint"
	         android:layout_marginTop="30dip"
	         android:layout_marginLeft="30dip"
	         android:textSize="15dip"
	         android:textColor="#ffffff" 
	    />
     </RelativeLayout>
     
     <LinearLayout
          android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:orientation="vertical"
	      android:layout_marginTop="20dip"
	      android:layout_marginLeft="20dip"
	      android:layout_marginRight="20dip"
	      android:layout_below="@id/layout_bluetooth" >
	       
	   	   <LinearLayout
		       android:layout_width="fill_parent"
		       android:layout_height="wrap_content"
		       android:orientation="horizontal" >
	
		       <TextView
		           android:id="@id/text_bluetooth_chinese_name"
		           android:layout_width="fill_parent"
		           android:layout_height="wrap_content"
		           android:layout_weight="2"
		           android:gravity="right"
		           android:layout_marginRight="20dip"
		           android:textColor="#ffffff" 
		        />
		
		        <TextView
		            android:id="@id/text_bluetooth_name"  
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:gravity="left"
		            android:layout_marginLeft="20dip"
		            android:textColor="#3dbef9" 
				/>     
	   	 </LinearLayout>
	   	 
 	   	 <LinearLayout
		       android:layout_width="fill_parent"
		       android:layout_height="wrap_content"
		       android:orientation="horizontal" >
	
		       <TextView
		           android:id="@id/text_bluetooth_chinese_mac"
		           android:layout_width="fill_parent"
		           android:layout_height="wrap_content"
		           android:layout_weight="2"
		           android:gravity="right"
		           android:layout_marginRight="20dip"
		           android:textColor="#ffffff" 
		        />
		
		        <TextView
		            android:id="@id/text_bluetooth_mac"  
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:gravity="left"
		            android:layout_marginLeft="20dip"
		            android:textColor="#3dbef9" 
				/>     
	   	 </LinearLayout>
	   	 
		 <LinearLayout
		       android:layout_width="fill_parent"
		       android:layout_height="wrap_content"
		       android:orientation="horizontal" >
	
		       <TextView
		           android:id="@id/text_bluetooth_chinese_search_mode"
		           android:layout_width="fill_parent"
		           android:layout_height="wrap_content"
		           android:layout_weight="2"
		           android:gravity="right"
		           android:layout_marginRight="20dip"
		           android:textColor="#ffffff" 
		        />
		
		        <TextView
		            android:id="@id/text_bluetooth_search_mode"  
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:gravity="left"
		            android:layout_marginLeft="20dip"
		            android:textColor="#3dbef9" 
				/>     
	   	 </LinearLayout>
     </LinearLayout>
</RelativeLayout>