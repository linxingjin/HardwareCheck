<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/item_background" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12.0dip"
            android:layout_marginLeft="60dip"
            android:layout_marginRight="60dip"
            android:layout_marginTop="6.0dip"
            android:orientation="vertical" >
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dip"
                android:layout_marginBottom="70dip"
                android:layout_gravity="center"
                android:background="@drawable/pressure_sensor" 
            />

                <ScrollView
                    android:id="@id/main_scrollview"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="48.0dip"
                    android:layout_marginLeft="60dip"
            	    android:layout_marginRight="60dip"
                    android:layout_marginTop="6.0dip">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:gravity="left"
                                android:text="@string/pressure_value"
                                android:textColor="#ffffffff" />

                            <TextView
                                android:id="@id/pressure_value"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginRight="12.0dip"
                                android:gravity="right"
                                android:textColor="#3dbef9" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:gravity="left"
                                android:text="@string/pressure_accuracy"
                                android:textColor="#ffffffff" />

                            <TextView
                                android:id="@id/pressure_accuracy"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginRight="12.0dip"
                                android:gravity="right"
                                android:textColor="#3dbef9" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:gravity="left"
                                android:text="@string/pressure_name"
                                android:textColor="#ffffffff" />

                            <TextView
                                android:id="@id/pressure_name"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginRight="12.0dip"
                                android:gravity="right"
                                android:textColor="#3dbef9" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:gravity="left"
                                android:text="@string/pressure_company"
                                android:textColor="#ffffffff" />

                            <TextView
                                android:id="@id/pressure_company"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginRight="12.0dip"
                                android:gravity="right"
                                android:textColor="#3dbef9" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:gravity="left"
                                android:text="@string/pressure_sample_rate"
                                android:textColor="#ffffffff" />

                            <TextView
                                android:id="@id/pressure_sample_rate"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginRight="12.0dip"
                                android:gravity="right"
                                android:textColor="#3dbef9" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:gravity="left"
                                android:text="@string/pressure_version"
                                android:textColor="#ffffffff" />

                            <TextView
                                android:id="@id/pressure_version"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginRight="12.0dip"
                                android:gravity="right"
                                android:textColor="#3dbef9" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:gravity="left"
                                android:text="@string/pressure_power"
                                android:textColor="#ffffffff" />

                            <TextView
                                android:id="@id/pressure_power"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginRight="12.0dip"
                                android:gravity="right"
                                android:textColor="#3dbef9" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:gravity="left"
                                android:text="@string/pressure_max_range"
                                android:textColor="#ffffffff" />

                            <TextView
                                android:id="@id/pressure_max_range"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginRight="12.0dip"
                                android:gravity="right"
                                android:textColor="#3dbef9" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:gravity="left"
                                android:text="@string/pressure_resolution"
                                android:textColor="#ffffffff" />

                            <TextView
                                android:id="@id/pressure_resolution"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginRight="12.0dip"
                                android:gravity="right"
                                android:textColor="#3dbef9" />
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
</RelativeLayout>